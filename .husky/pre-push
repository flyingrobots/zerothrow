#!/bin/sh

echo "üöÄ Running full CI test matrix locally before push..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Check if Docker is running
if ! docker info > /dev/null 2>&1; then
    echo "${YELLOW}‚ö†Ô∏è  Docker is not running. Falling back to local test execution...${NC}"
    echo ""
    
    # Run tests locally as fallback
    echo "${BLUE}üèÉ Running tests locally...${NC}"
    
    # Run all test suites with better error reporting
    echo "1Ô∏è‚É£  Running unit tests..."
    if ! npm test 2>&1 | tee /tmp/unit-test.log; then
        echo ""
        echo "${RED}‚ùå Unit tests failed!${NC}"
        echo "${RED}====================================${NC}"
        grep -E "(\u2713|\u00d7|FAIL|Error:|at .*:[0-9]+:[0-9]+)" /tmp/unit-test.log | tail -30
        echo "${RED}====================================${NC}"
        echo ""
        echo "${YELLOW}üí° To see full output: cat /tmp/unit-test.log${NC}"
        echo "${YELLOW}üí° To debug: npm test -- --reporter=verbose${NC}"
        exit 1
    fi
    
    echo ""
    echo "2Ô∏è‚É£  Running integration tests..."
    if ! npm run test:integration 2>&1 | tee /tmp/integration-test.log; then
        echo ""
        echo "${RED}‚ùå Integration tests failed!${NC}"
        echo "${RED}====================================${NC}"
        grep -E "(\u2713|\u00d7|FAIL|Error:|at .*:[0-9]+:[0-9]+)" /tmp/integration-test.log | tail -30
        echo "${RED}====================================${NC}"
        echo ""
        echo "${YELLOW}üí° To see full output: cat /tmp/integration-test.log${NC}"
        echo "${YELLOW}üí° To debug: npm run test:integration -- --reporter=verbose${NC}"
        exit 1
    fi
    
    echo ""
    echo "3Ô∏è‚É£  Running lint checks..."
    if ! npm run lint 2>&1 | tee /tmp/lint.log; then
        echo ""
        echo "${RED}‚ùå Lint checks failed!${NC}"
        echo "${RED}====================================${NC}"
        cat /tmp/lint.log
        echo "${RED}====================================${NC}"
        echo ""
        echo "${YELLOW}üí° To auto-fix: npm run lint -- --fix${NC}"
        echo "${YELLOW}üí° To check specific file: npx eslint path/to/file.ts${NC}"
        exit 1
    fi
    
    echo ""
    echo "4Ô∏è‚É£  Running build check..."
    if ! npm run build 2>&1 | tee /tmp/build.log; then
        echo ""
        echo "${RED}‚ùå Build failed!${NC}"
        echo "${RED}====================================${NC}"
        tail -50 /tmp/build.log
        echo "${RED}====================================${NC}"
        echo ""
        echo "${YELLOW}üí° Common issues:${NC}"
        echo "${YELLOW}  - Missing dependency: Check if 'jiti' or other packages need installing${NC}"
        echo "${YELLOW}  - TypeScript errors: Review the errors above${NC}"
        echo "${YELLOW}  - Module resolution: Check tsconfig.json paths${NC}"
        echo "${YELLOW}üí° To see full output: cat /tmp/build.log${NC}"
        exit 1
    fi
    
    echo ""
    echo "${GREEN}‚úÖ All local tests passed! Safe to push.${NC}"
    echo "${YELLOW}Note: Full CI matrix with multiple Node versions requires Docker.${NC}"
    exit 0
fi

# Check if docker-compose exists
if ! command -v docker-compose &> /dev/null && ! docker compose version &> /dev/null; then
    echo "${RED}‚ùå docker-compose is not installed.${NC}"
    exit 1
fi

# Use 'docker compose' if available, otherwise 'docker-compose'
if docker compose version &> /dev/null 2>&1; then
    DOCKER_COMPOSE="docker compose"
else
    DOCKER_COMPOSE="docker-compose"
fi

echo "${BLUE}üê≥ Starting all tests in parallel using Docker Compose...${NC}"
echo "   Running 6 containers simultaneously for maximum speed!"
echo ""

# Run all services in parallel
$DOCKER_COMPOSE -f docker-compose.prepush.yml up \
    --abort-on-container-failure \
    --remove-orphans

EXIT_CODE=$?

# Clean up
$DOCKER_COMPOSE -f docker-compose.prepush.yml down --remove-orphans

# Check the exit code
if [ $EXIT_CODE -eq 0 ]; then
    echo ""
    echo "${GREEN}üéâ All tests passed! Safe to push.${NC}"
    exit 0
fi

echo ""
echo "${RED}‚ùå Some tests failed!${NC}"
echo ""
echo "To see detailed logs for a specific service:"
echo "  $DOCKER_COMPOSE -f docker-compose.prepush.yml logs <service-name>"
echo ""
echo "Available services:"
echo "  - unit-tests-node22" 
echo "  - integration-tests"
echo "  - lint-check"
echo "  - build-check"
echo "  - coverage-check"
echo ""
echo "To skip these checks and push anyway (NOT RECOMMENDED):"
echo "  git push --no-verify"
exit 1