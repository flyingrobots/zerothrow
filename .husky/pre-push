#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "üöÄ Running full CI test matrix locally before push..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Check if Docker is running
if ! docker info > /dev/null 2>&1; then
    echo "${RED}‚ùå Docker is not running. Please start Docker to run the full test matrix.${NC}"
    echo "${YELLOW}‚ö†Ô∏è  Skipping pre-push tests. Push at your own risk!${NC}"
    exit 0
fi

# Check if docker-compose exists
if ! command -v docker-compose &> /dev/null && ! docker compose version &> /dev/null; then
    echo "${RED}‚ùå docker-compose is not installed.${NC}"
    exit 1
fi

# Use 'docker compose' if available, otherwise 'docker-compose'
if docker compose version &> /dev/null 2>&1; then
    DOCKER_COMPOSE="docker compose"
else
    DOCKER_COMPOSE="docker-compose"
fi

echo "${BLUE}üê≥ Starting all tests in parallel using Docker Compose...${NC}"
echo "   Running 6 containers simultaneously for maximum speed!"
echo ""

# Run all services in parallel
$DOCKER_COMPOSE -f docker-compose.test.yml up \
    --abort-on-container-exit \
    --exit-code-from unit-tests-node22 \
    --remove-orphans

EXIT_CODE=$?

# Check the exit codes of all services
if [ $EXIT_CODE -eq 0 ]; then
    # All services exited with 0, but let's make sure by checking each one
    FAILED=0
    
    echo ""
    echo "üìä Checking individual service results..."
    
    for service in unit-tests-node22 integration-tests lint-check build-check coverage-check; do
        EXIT=$($DOCKER_COMPOSE -f docker-compose.test.yml ps -q $service | xargs docker inspect -f '{{ .State.ExitCode }}' 2>/dev/null || echo "1")
        if [ "$EXIT" = "0" ]; then
            echo "${GREEN}‚úÖ $service passed${NC}"
        else
            echo "${RED}‚ùå $service failed (exit code: $EXIT)${NC}"
            FAILED=1
        fi
    done
    
    # Clean up
    $DOCKER_COMPOSE -f docker-compose.test.yml down --remove-orphans
    
    if [ $FAILED -eq 0 ]; then
        echo ""
        echo "${GREEN}üéâ All tests passed! Safe to push.${NC}"
        exit 0
    fi
else
    # Clean up
    $DOCKER_COMPOSE -f docker-compose.test.yml down --remove-orphans
fi

echo ""
echo "${RED}‚ùå Some tests failed!${NC}"
echo ""
echo "To see detailed logs for a specific service:"
echo "  $DOCKER_COMPOSE -f docker-compose.test.yml logs <service-name>"
echo ""
echo "Available services:"
echo "  - unit-tests-node22" 
echo "  - integration-tests"
echo "  - lint-check"
echo "  - build-check"
echo "  - coverage-check"
echo ""
echo "To skip these checks and push anyway (NOT RECOMMENDED):"
echo "  git push --no-verify"
exit 1