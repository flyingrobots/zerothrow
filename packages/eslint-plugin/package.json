{
  "name": "@zerothrow/eslint-plugin",
  "version": "0.0.1-alpha",
  "description": "ESLint plugin for ZeroThrow best practices",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@zerothrow/core": "^0.0.1-alpha"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "tsup": "^8.5.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "keywords": ["zerothrow", "eslint", "eslint-plugin", "linting"],
  "author": "ZeroThrow Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zerothrow/zerothrow.git",
    "directory": "packages/eslint-plugin"
  }
}