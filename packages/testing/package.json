{
  "name": "@zerothrow/testing",
  "version": "0.0.1",
  "description": "Unified test matchers for ZeroThrow Result types - supports Jest and Vitest",
  "keywords": [
    "zerothrow",
    "testing",
    "jest",
    "vitest",
    "test",
    "matchers",
    "result",
    "error-handling"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zerothrow/zerothrow.git",
    "directory": "packages/testing"
  },
  "license": "MIT",
