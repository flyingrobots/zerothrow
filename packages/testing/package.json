      "optional": true
    },
    "@zerothrow/vitest": {
      "optional": true
    }
  },
  "devDependencies": {
    "@zerothrow/core": "file:../core",
    "@zerothrow/jest": "file:../jest",
    "@zerothrow/vitest": "file:../vitest",
