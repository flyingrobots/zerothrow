{
  "name": "@zerothrow/testing",
  "version": "1.1.0",
  "description": "Unified test matchers for ZeroThrow Result types - supports Jest and Vitest",
  "keywords": [
    "zerothrow",
    "testing",
    "jest",
    "vitest",
    "test",
    "matchers",
    "result",
    "error-handling"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zerothrow/zerothrow.git",
    "directory": "packages/testing"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "echo 'Skipping build until deps are in lockfile'",
    "dev": "tsup --watch",
    "test": "echo 'Tests run from monorepo root'"
  },
  "peerDependencies": {
    "@zerothrow/core": ">=0.1.0",
    "@zerothrow/jest": ">=0.1.2-alpha.0",
    "@zerothrow/vitest": ">=0.1.1-alpha.0",
    "jest": ">=26.0.0",
    "vitest": ">=0.30.0"
  },
  "peerDependenciesMeta": {
    "jest": {
      "optional": true
    },
    "vitest": {
      "optional": true
    },
    "@zerothrow/jest": {
      "optional": true
    },
    "@zerothrow/vitest": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "platform": "node",
  "sideEffects": false,
  "author": "J. Kirby Ross <james@flyingrobots.dev> (https://github.com/flyingrobots)",
  "homepage": "https://github.com/zerothrow/zerothrow#readme",
  "bugs": {
    "url": "https://github.com/zerothrow/zerothrow/issues"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts"
}
