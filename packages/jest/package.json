{
  "name": "@zerothrow/jest",
  "version": "0.1.0",
  "description": "Jest matchers for ZeroThrow Result types",
  "author": "ZeroThrow",
  "license": "MIT",
  "homepage": "https://github.com/zerothrow/zerothrow#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zerothrow/zerothrow.git",
    "directory": "packages/jest"
  },
  "bugs": {
    "url": "https://github.com/zerothrow/zerothrow/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=16.14"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src test --max-warnings 0"
  },
  "peerDependencies": {
    "@jest/globals": ">=27.0.0",
    "@zerothrow/core": "0.0.2-alpha",
    "jest": ">=27.0.0"
  },
  "peerDependenciesMeta": {
    "@jest/globals": {
      "optional": true
    }
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@zerothrow/core": "file:../core",
    "jest": "^29.7.0"
  },
  "keywords": [
    "zerothrow",
    "jest",
    "matchers",
    "testing",
    "result",
    "error-handling",
    "typescript"
  ],
  "publishConfig": {
    "access": "public"
  }
}