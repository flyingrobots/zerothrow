{
  "name": "@flyingrobots/zerothrow",
  "version": "0.0.1-alpha",
  "description": "Rust‑style Result<T,E> & zero‑throw discipline for TypeScript",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./eslint": "./dist/eslint.js"
  },
  "bin": {
    "zerothrow-setup-hooks": "./scripts/setup-hooks.sh"
  },
  "engines": {
    "node": ">=16.14"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "test": "vitest run --coverage",
    "test:examples": "tsx tests/examples/test-runner.ts",
    "test:examples:validate": "tsx tests/examples/test-runner.ts validate",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "githooks": "bash scripts/setup-hooks.sh",
    "prepare": "husky",
    "lint:staged": "lint-staged"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@typescript-eslint/utils": "^8.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "tsup": "^8.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.5.0",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  }
}
