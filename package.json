{
  "name": "@zerothrow/zerothrow",
  "version": "0.0.1-alpha",
  "description": "Rust‑style Result<T,E> & zero‑throw discipline for TypeScript",
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "result",
    "error-handling",
    "typescript",
    "zero-throw",
    "rust-style",
    "functional",
    "monad",
    "either"
  ],
  "homepage": "https://github.com/zerothrow/zerothrow#readme",
  "bugs": {
    "url": "https://github.com/zerothrow/zerothrow/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zerothrow/zerothrow.git"
  },
  "license": "MIT",
  "author": "Flying Robots",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./platform": {
      "types": "./dist/platform/index.d.ts",
      "import": "./dist/platform/index.js",
      "require": "./dist/platform/index.cjs",
      "default": "./dist/platform/index.js"
    },
    "./eslint": {
      "types": "./dist/eslint/index.d.ts",
      "import": "./dist/eslint/index.js",
      "require": "./dist/eslint/index.cjs",
      "default": "./dist/eslint/index.js"
    },
    "./react": "./dist/react-entry.js",
    "./loggers/pino": "./dist/loggers/pino.js",
    "./loggers/winston": "./dist/loggers/winston.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "bin": {
    "zerothrow-setup-hooks": "./scripts/githooks/setup-hooks.ts"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "tsx scripts/setup.ts",
    "build:all": "turbo run build",
    "test:all": "turbo run test",
    "test:integration:all": "turbo run test:integration",
    "test:watch": "turbo run test -- --watch",
    "lint:all": "turbo run lint",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "githooks": "tsx scripts/githooks/setup-hooks.ts",
    "prepare": "husky",
    "bench": "tsx scripts/benchmarks/run-all.ts",
    "ci:local": "npm run lint:all && npm run build:all && npm run test:all"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^24.0.10",
    "@types/pg": "^8.15.4",
    "@types/react": "^18.3.23",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@typescript-eslint/rule-tester": "^8.35.1",
    "@typescript-eslint/utils": "^8.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "chalk": "^5.4.1",
    "eslint": "^9.0.0",
    "express": "^5.1.0",
    "fastify": "^5.4.0",
    "hono": "^4.8.3",
    "husky": "^9.1.7",
    "inquirer": "^12.6.3",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.2",
    "ora": "^8.2.0",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "react": "^18.3.1",
    "supertest": "^7.1.1",
    "tsup": "^8.0.0",
    "tsx": "^4.20.3",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  }
}
