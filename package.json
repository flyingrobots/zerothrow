{
  "name": "@flyingrobots/zerothrow",
  "version": "0.0.1-alpha",
  "description": "Rust‑style Result<T,E> & zero‑throw discipline for TypeScript",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js",
    "./eslint": "./dist/eslint.js",
    "./react": "./dist/react-entry.js",
    "./loggers/pino": "./dist/loggers/pino.js",
    "./loggers/winston": "./dist/loggers/winston.js"
  },
  "bin": {
    "zerothrow-setup-hooks": "./scripts/setup-hooks.sh"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "build": "tsup src/index.ts src/react-entry.ts src/eslint.ts src/loggers/pino.ts src/loggers/winston.ts --format esm,cjs --dts",
    "test": "vitest run --coverage",
    "test:examples": "tsx test/examples/test-runner.ts",
    "test:examples:validate": "tsx test/examples/test-runner.ts validate",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:all": "npm run test && npm run test:integration",
    "test:watch": "vitest watch",
    "bench": "vitest bench --run",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --ignore-pattern \"benchmark/**\"",
    "githooks": "bash scripts/setup-hooks.sh",
    "prepare": "husky",
    "lint:staged": "lint-staged"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.10",
    "@types/react": "^18.3.23",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@typescript-eslint/rule-tester": "^8.35.1",
    "@typescript-eslint/utils": "^8.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.0.0",
    "express": "^5.1.0",
    "fastify": "^5.4.0",
    "hono": "^4.8.3",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "react": "^18.3.1",
    "supertest": "^7.1.1",
    "tsup": "^8.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  }
}
